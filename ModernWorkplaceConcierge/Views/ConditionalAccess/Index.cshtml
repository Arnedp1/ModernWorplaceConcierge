@model IEnumerable<ModernWorkplaceConcierge.Helpers.ConditionalAccessPolicy>

@{
    ViewBag.Current = "AutoPilotConfigurationJSON";
}

<div class="jumbotron">
    <h1>ConditionalAccessPolicies</h1>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.displayName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.displayName)
            </td>
            <td>
                @Html.ActionLink("Download", "Edit", new { id = item.id }) |
            </td>
        </tr>
    }

</table>
