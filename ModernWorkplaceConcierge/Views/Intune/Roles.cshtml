@model IEnumerable<Microsoft.Graph.RoleDefinition>

@{
    ViewBag.Current = "IntuneRoles";
}
    <div class="jumbotron">
        <h1>Intune roles</h1>
        <p>Copy built-in or existing roles for <a href="https://docs.microsoft.com/en-us/intune/fundamentals/role-based-access-control" target="_blank">Role-based access control (RBAC) with Microsoft Intune.</a></p>
    </div>
@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Built-in
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsBuiltInRoleDefinition)
                </td>
                <td>
                    @Html.ActionLink("Copy", "Copy", new { Id = item.Id })
                </td>
            </tr>
        }

    </table>
}


