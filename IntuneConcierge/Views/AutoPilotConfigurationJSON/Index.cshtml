@model IEnumerable<Microsoft.Graph.WindowsAutopilotDeploymentProfile>

@{
    ViewBag.Current = "AutoPilotConfigurationJSON";
}

    <div class="jumbotron">
        <h1>Windows Autopilot Profiles</h1>
        <p>The downloaded profile can be used for OSD. Simply store the file under </p>
        @Html.ActionLink("Export", "DownloadAsync", "Export", new { area = "" }, new { @class = "btn btn-primary btn-large" })
    </div>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastModifiedDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModifiedDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Download", "DownloadAutopilotConfigurationJSON", new { id = item.Id })
                </td>
            </tr>
        }

    </table>



